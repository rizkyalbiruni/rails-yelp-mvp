<h3><%= @restaurant.name %></h3>

<p> ---------------------- </p>

<h5><%= @restaurant.category %></h5>
<p><%= @restaurant.phone_number %></p>
<p><%= @restaurant.address %></p>

<p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %></li>
    <li class="list-group-item"><%= "#{review.rating} out of 5" %></li>
  <% end %>
</ul>

<h5><%= link_to "Edit", edit_restaurant_path(@restaurant) %></h5>
<h5><%= link_to "Add Review", new_restaurant_review_path(@restaurant) %></h5>

<p><%= link_to "Delete", restaurant_path(@restaurant),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%></p>

<p><%= link_to "Back to All", restaurants_path %></p>
